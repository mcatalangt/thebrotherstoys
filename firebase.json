{
  "hosting": [
    {
      "site": "storetbt-site",
      "public": "store_tbt/dist",
      "rewrites": [
        { "source": "**", "destination": "/index.html" }
      ]
    },
    {
      "site": "admintbt-site",
      "public": "admin_tbt/dist",
      "rewrites": [
        { "source": "/api/**",
        "run": { "serviceId": "thebrotherstoys", "region": "us-east4" } },
        { "source": "**", "destination": "/index.html" }
      ],
          "headers": [
      { "source": "/**", "headers": [ { "key": "Cache-Control", "value": "public, max-age=300" } ] }
    ]
    }
  ]
}