{
  "hosting": [
    {
      "site": "store-site",
      "public": "store_tbt/dist",
      "rewrites": [
        { "source": "/api/**", "run": { "serviceId": "api-tbt", "region": "us-central1" } },
        { "source": "**", "destination": "/index.html" }
      ]
    },
    {
      "site": "admin-site",
      "public": "admin_tbt/dist",
      "rewrites": [
        { "source": "/api/**", "run": { "serviceId": "api-tbt", "region": "us-central1" } },
        { "source": "**", "destination": "/index.html" }
      ]
    }
  ]
}